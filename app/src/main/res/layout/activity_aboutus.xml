<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.karma.doctoryourself.aboutus">

    <TextView
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/appname"
        android:background="@drawable/textshape"
        android:text="     Application Name\n     Doctor Yourself"/>

    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/textshape"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/developers"
        android:text="   Developers\n   Kinga Seldon\n   Tshering Penjor\n   Samten Rabgay\n   Kiba Yangzom"/>


    <TextView
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/textshape"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/copyright"
        android:text="   Copyright\n   Copyright to CST"/>
</LinearLayout>
